<div class="row">
  <div class="col-lg-6">
    <form action="/search" method="post">
    <div class="input-group">
      <input type="text" class="form-control" id="query" name="query" placeholder="Szukana fraza...">
      <span class="input-group-btn">
        <button class="btn btn-default" type="submit">Szukaj</button>
      </span>
    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->
  </form>
</div><!-- /.row -->
<hr>
<h2>Wyniki wyszukiwania frazy "{{query}}"</h2>
{{# if products}}
{{# each products}}
    <div class="row">
        {{# each this}}
<div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="{{ this.imagePath }}"
                alt="product image"
                class="img-responsive">
            <div class="caption">
                <h3>{{ this.title }}</h3>
                <p class="description">{{ this.description }}</p>
                <div class="clearfix">
                    <div class="price pull-left">
                        {{ this.price }} zł
                    </div>
 <p><a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Dodaj do koszyka</a> 
                </div>
            </div>
        </div>
    </div>
        {{/each}}
    </div>
{{/each}}
{{ else }}
<h3>Brak wyników</h3>
{{/if}}