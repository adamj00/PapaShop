{{# each products}}
    <div class="row">
        {{# each this}}
<div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="{{ this.imagePath }}"
                alt="product image"
                class="img-responsive">
            <div class="caption">
                <h3>{{ this.title }}</h3>
                <p class="description">{{ this.description }}</p>
                <div class="clearfix">
                    <div class="price pull-left">
                        {{ this.price }} z≈Ç
                    </div>
 <p><a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Dodaj do koszyka</a> 
                </div>
            </div>
        </div>
    </div>
        {{/each}}
    </div>
{{/each}}