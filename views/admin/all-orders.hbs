<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h1>Złożone zamówienia</h1>
        <hr>
        {{# each orders }}
            <div class="panel panel-default">
                <div class="panel-body">
                    <strong>{{this.date}}</strong>
                    <br>
                    {{this.name}}
                    <br>
                    {{this.address}}
                    <br>
                   {{this.email}}
                    <br>
                    {{this.comment}}
                    <br>
                    <ul class="list-group">
                        {{# each this.items }}
                            <li class="list-group-item">
                                <span class="badge">{{ this.qty }}</span>
                                {{ this.item.title }}
                            </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="panel-footer"> <strong>{{ this.cart.totalPrice }} zł</strong></div>
            </div>
        {{/each}}
    </div>
</div>