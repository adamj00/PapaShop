{{# if products }} 
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h1>Koszyk</h1>
            <ul class="list-group">
                {{# each products }}
                    <li class="list-group-item">
                        <strong> {{ this.item.title }} </strong>
                        <span class="badge"> ilość: {{ this.qty }}</span>
                        <span class="label label-success"> {{ this.price }} zł</span>
                        <div class="btn-group">
                            <a href="/reduce/{{ this.item._id }}" class="button"><i class="fa fa-minus" aria-hidden="true"></i></a>
                            <a href="/remove/{{ this.item._id }}" class="button"><i class="fa fa-trash" aria-hidden="true"></i></a>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <strong>Łączna kwota: {{ totalPrice }} zł</strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <a href="/checkout" type="button" class="btn btn-success">Złóż zamówienie</a>
        </div>
    </div>

{{ else }}
    <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2>Brak przedmiotów w koszyku</h2>
    </div>
</div>
{{/if}}