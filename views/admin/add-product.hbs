<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <h1>Tworzenie nowego produktu</h1>
        <form action="/admin/add-product" method="post" id="edit-form">
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="title">Nazwa produktu</label>
                        <input type="text" id="title" class="form-control" required name="title" >
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="description">Opis produktu</label>
                        <input type="text" id="description" class="form-control" required name="description" >
                    </div>
                </div>
                <hr>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="imagePath">Link do obrazka</label>
                        <input type="text" id="imagePath" class="form-control" name="imagePath" >
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="price">Cena</label>
                        <input type="number" step="0.01" id="price" class="form-control" name="price" >
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-success">Zapisz</button>
        </form>
    </div>
</div>