<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <h1>Składanie zamówienia</h1>
        <h4>Kwota: {{total}} zł</h4>
        <form action="/checkout" method="post" id="checkout-form">
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="name">Imię i nazwisko</label>
                        <input type="text" id="name" class="form-control" required name="name">
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="address">Adres dostawy</label>
                        <input type="text" id="address" class="form-control" required name="address">
                    </div>
                </div>
                <hr>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="comments">Uwagi do zamówienia</label>
                        <input type="text" id="comments" name="comments" class="form-control">
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-success">Złóż zamówienie</button>
        </form>
    </div>
</div>